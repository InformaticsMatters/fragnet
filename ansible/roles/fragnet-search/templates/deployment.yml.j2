---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: fragnet-search
  namespace: {{ fs_project }}
spec:
  replicas: 1
  selector:
    matchLabels:
      name: fragnet-search
  template:
    metadata:
      labels:
        name: fragnet-search
    spec:
      serviceAccountName: {{ fs_sa }}
      containers:
      - name: fragnet-search
        image: squonk/fragnet-services:{{ fs_image_tag }}
        ports:
        - containerPort: 8080
          name: http
        env:
        - name: NEO4J_SERVER
          value: {{ neo4j_hostname }}
        - name: NEO4J_USER
          value: {{ neo4j_user }}
        - name: NEO4J_PASSWORD
          value: {{ neo4j_password }}
        - name: LOG_ROOT
          value: /logs
        resources:
          limits:
            cpu: 4000m
            memory: 8Gi
          requests:
            cpu: 1000m
            memory: 4Gi
        volumeMounts:
        - mountPath: /usr/local/tomcat/webapps/fragnet-search/META-INF/context.xml
          name: fs-config-map
          subPath: context.xml
          readOnly: true
        - mountPath: /usr/local/tomcat/webapps/fragnet-search/WEB-INF/keycloak.json
          name: fs-config-map
          subPath: keycloak.json
          readOnly: true
        - mountPath: /usr/local/tomcat/conf/logging.properties
          name: fs-config-map
          subPath: logging.properties
        - mountPath: /usr/local/tomcat/webapps/fragnet-search/WEB-INF/web.xml
          name: fs-config-map
          subPath: web.xml
          readOnly: true
        - mountPath: /usr/local/tomcat/conf/server.xml
          name: fs-config-map
          subPath: server.xml
      volumes:
      - name: fs-config-map
        configMap:
          name: fs-config-map
